

@{
    Layout = null;
}

<style type="text/css">
    html {
        font-size: 14px;
        font-family: Arial, Helvetica, sans-serif;
    }

    .customer-photo {
        display: inline-block;
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background-size: 32px 35px;
        background-position: center center;
        vertical-align: middle;
        line-height: 32px;
        box-shadow: inset 0 0 1px #999, inset 0 0 10px rgba(0,0,0,.2);
        margin-left: 5px;
    }

    .customer-name {
        display: inline-block;
        vertical-align: middle;
        line-height: 32px;
        padding-left: 3px;
    }
</style>


<link rel="stylesheet" href="https://kendo.cdn.telerik.com/2020.3.1021/styles/kendo.default-v2.min.css" />

<script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
<script src="https://kendo.cdn.telerik.com/2020.3.1021/js/kendo.all.min.js"></script>




<script>

    $(document).ready(function () {

        var table = null;
        if (table != null) {
            var grid = $("#grid").data("kendoGrid");
            grid.destroy();
            table = null;
        }
        debugger
        table = $("#grid").kendoGrid({

            dataSource: {
                transport: {
                    read: {
                        url: "/Home/GetHistoricalAndForecastData",
                        type: "POST",
                        dataType: "json"
                    }
                },
                schema: {
                    data: "data",
                    total: "total"
                },
                serverPaging: true,
                serverSorting: true,
                sort: { field: "Date", dir: "asc" },
                serverFiltering: true,
                pageSize: 10,
            },
            scrollable: false,
            sortable: {
                allowUnsort: false
            },
            toolbar: ["search"],
            pageable: {
                numeric: true,
                input: true
            },
            groupable: false,
            filterable: false,
            columns: [
                { field: "EmpId", title: "EmpId" },
                { field: "FirstName", title: "FirstName" },
                { field: "LastName", title: "LastName" },
                { field: "Address", title: "Address" }
            ]

        });

    });
</script>



<div id="main">
    <div id="grid"></div>
</div>

